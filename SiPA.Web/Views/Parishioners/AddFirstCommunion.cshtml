@model SiPA.Web.Models.FirstCommunionViewModel

@{ 
    ViewData["Title"] = "Create";
} 

<h2>Crear</h2>

<h4>Primera Comunión</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFirstCommunion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParishionerId" />

            <partial name="_FirstCommunion" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.ParishionerId" class="btn btn-success">Volver al Feligrés</a>
            </div>
        </form>
    </div>
</div>
