@model SiPA.Web.Models.SacramentViewModel

@{ 
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Sacramento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSacrament" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParishionerId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.ParishionerId" class="btn btn-success">volver a Feligres</a>
            </div>
        </form>           
    </div>
</div>