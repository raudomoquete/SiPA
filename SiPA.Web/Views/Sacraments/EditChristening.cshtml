@model SiPA.Web.Models.EditChristeningViewModel

@{ 
    ViewData["Title"] = "Edit";
 }

<h2>Editar</h2>

<h4>Bautizo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditChristening" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ParishionerId" />

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <label asp-for="FirstName" class="form-control"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <label asp-for="LastName" class="form-control"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChristeningDate" class="control-label"></label>
                <label asp-for="ChristeningDate" class="form-control"></label>
                <span asp-validation-for="ChristeningDate" class="text-danger"></span>
            </div>

            <partial name="_Sacrament" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.ParishionerId" class="btn btn-success">Volver al Feligres</a>
            </div>
        </form>
    </div>
</div>